<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.subject %></td>
    <td><%= issue.status %></td>
    <td><%= issue.body %></td>
    <td><%= link_to 'Show', [@project, issue] %></td>
    <td><%= link_to 'Edit', [:edit, @project, issue] %></td>
    <td><%= link_to 'Destroy', [@project, issue], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

